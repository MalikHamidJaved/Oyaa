<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/yoohoo_placeholder" />

    <TextView
        android:id="@+id/user_no"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/tv_invite"
        android:layout_toRightOf="@+id/user_image"
        android:text="No"
        android:textColor="@color/textColorPrimary" />

    <TextView
        android:clickable="false"
        android:background="@drawable/tv_invite_background"
        android:gravity="center"
        android:layout_toLeftOf="@+id/optionContainer"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_invite"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVITE"
        android:textColor="@color/blue" />



    <TextView
        android:layout_below="@+id/user_no"
        android:id="@+id/user_name"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@id/tv_invite"
        android:layout_toRightOf="@+id/user_image"
        android:text="Name"
        android:textColor="@color/textColorPrimary" />

    <FrameLayout
        android:id="@+id/optionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/removeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_remove_circle_outline_dark_24dp"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/userSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>