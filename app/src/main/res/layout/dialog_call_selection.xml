<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_voice_call"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_app_call_header" />

            <TextView
                android:id="@+id/tv_voice_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ic_voice_call"
                android:layout_alignRight="@+id/view_devider"
                android:layout_below="@+id/ic_voice_call"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/voice_call"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_devider"
                android:layout_width="1dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/tv_voice_call"
                android:layout_alignTop="@+id/ic_voice_call"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/ic_voice_call"
                android:background="@color/blue"></View>

            <ImageView
                android:id="@+id/ic_video_call"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_toRightOf="@+id/view_devider"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_video_call" />

            <TextView
                android:id="@+id/tv_video_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view_devider"
                android:layout_alignRight="@+id/ic_video_call"
                android:layout_below="@+id/ic_voice_call"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/video_call"
                android:textStyle="bold" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>


